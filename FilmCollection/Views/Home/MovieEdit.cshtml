@{
    ViewBag.Title = "Edit the Movie";
}
@model FilmCollection.Models.NewMovie

<!--Using ViewBags to get the previous info and edit it-->
<div class="text-center">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MovieId" value="@ViewBag.editedMovie.MovieId" />
        <div>
            <label asp-for="Category">Category:</label>
            <input asp-for="Category" value="@ViewBag.editedMovie.Category" />
        </div>
        <div>
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" value="@ViewBag.editedMovie.Title" />
        </div>
        <div>
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" value="@ViewBag.editedMovie.Year" />
        </div>
        <div>
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" value="@ViewBag.editedMovie.Director" />
        </div>
        <div>
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating">
                <!option @if (ViewBag.editedMovie.Rating == "") { <text> selected="selected" </text> } value="">Select a rating</!option>
                <!option @if (ViewBag.editedMovie.Rating == "G") { <text> selected="selected" </text> } value="G">G</!option>
                <!option @if (ViewBag.editedMovie.Rating == "PG") { <text> selected="selected" </text> } value="PG">PG</!option>
                <!option @if (ViewBag.editedMovie.Rating == "PG-13") { <text> selected="selected" </text> } value="PG-13">PG-13</!option>
                <!option @if (ViewBag.editedMovie.Rating == "R") { <text> selected="selected" </text> } value="R">R</!option>
                <!option @if (ViewBag.editedMovie.Rating == "UR") { <text> selected="selected" </text> } value="UR">Unrated</!option>
                <!option @if (ViewBag.editedMovie.Rating == "NR") { <text> selected="selected" </text> } value="NR">Not Rated</!option>
                <!option @if (ViewBag.editedMovie.Rating == "TV-Y7") { <text> selected="selected" </text> } value="TV-Y7">TV-Y7</!option>
                <!option @if (ViewBag.editedMovie.Rating == "TV-PG") { <text> selected="selected" </text> } value="TV-PG">TV-PG</!option>
                <!option @if (ViewBag.editedMovie.Rating == "TV-14") { <text> selected="selected" </text> } value="TV-14">TV-14</!option>
            </select>
        </div>
        <div>
            <label asp-for="Edited">Edited:</label>
            <select asp-for="Edited">
                <!option value="false">Select an option</!option>
                <!option @if (ViewBag.editedMovie.Edited == false) { <text> selected="selected" </text> } value="false">No</!option>
                <!option @if (ViewBag.editedMovie.Edited == true) { <text> selected="selected" </text> } value="true">Yes</!option>
            </select>

        </div>
        <div>
            <label asp-for="LentTo">Lent To:</label>
            <input asp-for="LentTo" value="@ViewBag.editedMovie.LentTo" />
        </div>
        <div>
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" value="@ViewBag.editedMovie.Notes" />
        </div>

        <button type="submit" id="submitButton" class="btn-success">Submit Your Edits</button>
        <div asp-validation-summary="All"></div>
    </form>
</div>
